{
    "name": "berlindb/phpcs",
    "type": "phpcodesniffer-standard",
    "description": "PHPCS ruleset for BerlinDB development",
    "license": "MIT",
    "require": {
        "php": "^7.1 || ^8.0",
        "squizlabs/php_codesniffer": "^3.5.3",
        "automattic/phpcs-neutron-ruleset": "^3.4.0",
        "slevomat/coding-standard": "^6.0.0"
    },
    "suggest": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0"
    },
    "scripts": {
        "test:cs": "phpcs --standard=PHPCSDev berlindb/",
        "test:xml": "tests/xmllint.sh"
    },
    "require-dev": {
        "phpcsstandards/phpcsdevcs": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
